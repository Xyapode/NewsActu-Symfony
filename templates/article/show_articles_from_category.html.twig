{% extends "base.html.twig" %}

{% block body %}

<h1 class="text-center mt-3">{{ category.name | capitalize }}</h1>


    {% for article in articles %}
        <div class="row">
            <div class="mx-auto">

            <hr>
                <div class="card mb-3" style="max-width: 100%;">
                    <div class="row g-0">
                        <div class="col-md-4">
                            <img src="{{ asset('uploads/') ~ article.photo }}" class="img-fluid rounded-start img-card-custom" alt="{{ article.title }}" style="height: 230px">
                        </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">{{ article.title | length > 80 ? article.title|slice(0,80) ~ '...' : article.title }}</h5>
                            <p class="card-text">{{ article.subtitle | length > 130 ? article.subtitle|slice(0,130) ~ '...' : article.subtitle }}</p>
                            <p class="card-text"><small class="text-muted">Derbi√®re modification : {{ article.updatedAt | date('d/m/Y') }}</small><span class="text-muted"> | Auteur : 
                            </span></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endfor %}

{% endblock %}